---
import { SignOutButton } from '@/components/auth';
import { getSession } from 'auth-astro/server';
import Layout from '../layouts/Layout.astro';

const session = await getSession(Astro.request);

if (!session || !session.user) {
  return Astro.redirect('/login');
}

const { user, expires } = session;
---

<Layout title="Profile - La Apuestada">
  <main
    class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 py-12 px-4"
  >
    <div class="max-w-4xl mx-auto">
      <div
        class="bg-white/10 backdrop-blur-md rounded-2xl shadow-2xl border border-white/20 p-8"
      >
        <h1 class="text-3xl font-bold text-white mb-6">
          Welcome to La Apuestada!
        </h1>

        <div class="flex items-center gap-4 mb-6">
          {
            user?.image && (
              <img
                src={user.image}
                alt="Profile"
                class="w-16 h-16 rounded-full border-2 border-white/20"
              />
            )
          }
          <div>
            <h2 class="text-xl font-semibold text-white">
              {user?.name}
            </h2>
            <p class="text-gray-300">{user?.email}</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-white/5 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-white mb-3">Your Stats</h3>
            <div class="space-y-2">
              <p class="text-gray-300">
                Total Bets: <span class="text-white font-semibold">0</span>
              </p>
              <p class="text-gray-300">
                Wins: <span class="text-green-400 font-semibold">0</span>
              </p>
              <p class="text-gray-300">
                Losses: <span class="text-red-400 font-semibold">0</span>
              </p>
            </div>
          </div>

          <div class="bg-white/5 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-white mb-3">Quick Actions</h3>
            <div class="space-y-3">
              <a
                href="/combats"
                class="block w-full text-center py-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md transition-colors"
              >
                View Combats
              </a>
              <a
                href="/voting"
                class="block w-full text-center py-2 px-4 bg-purple-600 hover:bg-purple-700 text-white rounded-md transition-colors"
              >
                Place Bets
              </a>
            </div>
          </div>
        </div>

        <div class="mt-8 flex justify-between items-center">
          <p class="text-gray-400 text-sm">Connected via Discord</p>
          <p class="text-gray-400 text-sm">
            Session Expires: {new Date(expires).toLocaleString()}
          </p>
          <SignOutButton />
        </div>
      </div>
    </div>
  </main>
</Layout>
